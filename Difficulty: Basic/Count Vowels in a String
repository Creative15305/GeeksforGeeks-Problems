#include <iostream>
#include <string>
using namespace std;

int countVowels(const string &str)
{

    int count = 0;

    for (char ch : str)
    {
        ch = tolower(ch);
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u')
        {
            count++;
        }
    }

    return count;
}

int main()
{
    string input;

    cout << "Enter a string: ";
    getline(cin, input);

    int vowelCount = countVowels(input);

    cout << "Number of vowels: " << vowelCount << endl;

    return 0;
}
