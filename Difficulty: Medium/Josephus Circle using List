#include <iostream>
#include <list>
using namespace std;

int josephus(int n, int k) {
    list<int> l;
    for (int i = 0; i < n; i++)
        l.push_back(i + 1);

    auto it = l.begin();
    while (l.size() > 1) {
        for (int i = 1; i < k; i++) {
            it++;
            if (it == l.end())
                it = l.begin();
        }
        it = l.erase(it);
        if (it == l.end())
            it = l.begin();
    }
    return l.front();
}

int main() {
    int n, k;
    cout << "Enter number of people (n): ";
    cin >> n;
    cout << "Enter step count (k): ";
    cin >> k;

    cout << "The safe position is: " << josephus(n, k) << endl;
    return 0;
}
