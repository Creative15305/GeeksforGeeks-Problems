#include <iostream>
using namespace std;

template <class T>
T largest(T arr[], int n) {
    T ans = arr[0];
    for (int i = 1; i < n; i++) {
        if (arr[i] > ans)
            ans = arr[i];
    }
    return ans;
}

int main() {
    int intArr[] = {10, 25, 3, 47, 5};
    int n1 = sizeof(intArr) / sizeof(intArr[0]);
    cout << "Largest integer: " << largest(intArr, n1) << endl;
    return 0;
}
